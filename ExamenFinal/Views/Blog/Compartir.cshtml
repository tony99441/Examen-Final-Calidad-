@{ Layout = null; }
<html lang="en">


<head>
    <meta charset="UTF-8">

    <style>
        .textbox {
            width: 100%;
            overflow: hidden;
            font-size: 20px;
            padding: 8px 0;
            margin: 8px 0;
            border-bottom: 1px solid #4caf50;
        }

            .textbox i {
                width: 26px;
                float: left;
                text-align: center;
                color: black
            }

            .textbox input {
                border: none;
                outline: none;
                background: none;
                color: black;
                font-size: 18px;
                width: 80%;
                float: left;
                margin: 10px;
            }
        .btn {
            width: 100%;
            background: none;
            border: 2px solid #4caf50;
            color: black;
            padding: 5px;
            font-size: 18px;
            cursor: pointer;
            margin: 7px 0;
        }


    </style>
</head>

<body style="background-color: #0c002e">
<div class="row">
    <div class="col-8" style="background-color: #fff">
        <form action="/Blog/CompartirNota" method="post">
    
                                <select name="IdUsuario">
                                    @foreach (var item in ViewBag.Usuarios)
                                    {
                        <option value="@item.Id">@item.Nombres - @item.Username</option>}
                                </select>
                                <button class="btn btn-success">compartir</button>
                      
        <input type="hidden" name="IdNota" value="@ViewBag.IdNota">
        </form>

    </div>
</div>
</body>
</html>