<html lang="en">


<head>
    <meta charset="UTF-8">

    <style>
        .textbox {
            width: 100%;
            overflow: hidden;
            font-size: 20px;
            padding: 8px 0;
            margin: 8px 0;
            border-bottom: 1px solid #4caf50;
        }

            .textbox i {
                width: 26px;
                float: left;
                text-align: center;
                color: black
            }

            .textbox input {
                border: none;
                outline: none;
                background: none;
                color: black;
                font-size: 18px;
                width: 80%;
                float: left;
                margin: 10px;
            }

        .btn {
            width: 100%;
            background: none;
            border: 2px solid #4caf50;
            color: black;
            padding: 5px;
            font-size: 18px;
            cursor: pointer;
            margin: 7px 0;
        }
    </style>
</head>

<body style="background-color: #fff">
    <div class="row">
        <div class="col-7" style="background-color: #fff">
            <form action="/Blog/EditarNotaA" method="post">


                <h2>Editar Nota</h2>
                <div class="textbox">
                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                    <input type="text" placeholder="Nombre del titulo" name="Titulo" value="@ViewBag.Nota.Titulo">
                </div>

                <div class="textbox">
                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                    <input type="text" placeholder="Escribe el contenido" name="Contenido" value="@ViewBag.Nota.Contenido">
                </div>

                <input type="hidden" name="Id" value="@ViewBag.Nota.Id">
                <button class="btn">Guardar</button>




            </form>

        </div>
    </div>
</body>
</html>